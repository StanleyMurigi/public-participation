openapi: 3.0.0
info:
  title: Chart Data API
  version: 1.0.0
paths:
  /auth/chart-data:
    get:
      summary: Retrieve chart data points
      parameters:
        - name: skip
          in: query
          required: false
          schema:
            type: integer
            default: 0
          description: Number of items to skip
        - name: limit
          in: query
          required: false
          schema:
            type: integer
            default: 100
          description: Maximum number of items to return
      responses:
        '200':
          description: A list of chart data points
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/ChartData'
    post:
      summary: Add new data points to the chart
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/ChartDataCreate'
      responses:
        '201':
          description: The created chart data point
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ChartData'
  /auth/chart-data/{id}:
    parameters:
      - name: id
        in: path
        required: true
        schema:
          type: integer
    put:
      summary: Update a specific data point
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/ChartDataUpdate'
      responses:
        '200':
          description: The updated chart data point
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ChartData'
    delete:
      summary: Delete a specific data point
      responses:
        '200':
          description: The deleted chart data point
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ChartData'
components:
  schemas:
    ChartData:
      type: object
      properties:
        id:
          type: integer
        timestamp:
          type: string
          format: date-time
        value:
          type: number
          format: float
      required:
        - id
        - timestamp
        - value
    ChartDataCreate:
      type: object
      properties:
        timestamp:
          type: string
          format: date-time
        value:
          type: number
          format: float
      required:
        - timestamp
        - value
    ChartDataUpdate:
      type: object
      properties:
        timestamp:
          type: string
          format: date-time
        value:
          type: number
          format: float
      required:
        - timestamp
        - value

